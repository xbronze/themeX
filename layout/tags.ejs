<div>
    <% if (site.tags.length){ %>
        <div>
            <% site.tags.sort('name').each(function(item){ %>
                <li><a href="#<%= item.name %>"><%= item.name %><span><%= item.posts.length %></span></a></li>
            <% }); %>
            </ul>
        </div>
    <% } %>
</div>
